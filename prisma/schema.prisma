generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deleted     Boolean   @default(false)

  // Relations
  staff       Staff?
  admin       Admin?
}

model Admin {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  FullName  String

  // Back-relations
  assignedDepartmentHeads DepartmentHead[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Staff {
  id           String       @id @default(uuid())
  user         User         @relation(fields: [userId], references: [id])
  userId       String       @unique
  name         String
  rank         String
  office       String?
  phone        String?
  email        String?
  research     String?
  cvUrl        String?
  department   Department   @relation(fields: [departmentId], references: [id])
  departmentId String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  deleted      Boolean      @default(false)

  publications Publication[]
  departmentHead DepartmentHead?   // 1-to-1 back relation

  uploadedFiles DepartmentFile[]
  createdEvents Event[]
}

model Department {
  id          String     @id @default(uuid())
  name        String     @unique
  code        String?    @unique
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deleted     Boolean    @default(false)

  staff       Staff[]
  programs    Program[]
  deptHead    DepartmentHead?
  files       DepartmentFile[]
  events      Event[]
}

model Program {
  id           String     @id @default(uuid())
  name         String
  code         String?    @unique
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  deleted      Boolean    @default(false)
}

model DepartmentHead {
  id            String    @id @default(uuid())
  staff         Staff     @relation(fields: [staffId], references: [id])
  staffId       String    @unique
  department    Department @relation(fields: [departmentId], references: [id])
  departmentId  String    @unique
  assignedBy    Admin     @relation(fields: [assignedByAdminId], references: [id])
  assignedByAdminId String

  assignedAt    DateTime  @default(now())
  startDate     DateTime?
  endDate       DateTime?
  deleted       Boolean   @default(false)
}

model Publication {
  id        String   @id @default(uuid())
  staff     Staff    @relation(fields: [staffId], references: [id])
  staffId   String
  title     String
  journal   String?
  year      Int?
  url       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DepartmentFile {
  id            String     @id @default(uuid())
  department    Department @relation(fields: [departmentId], references: [id])
  departmentId  String
  title         String
  description   String?
  fileUrl       String

  uploadedBy    Staff?     @relation(fields: [uploadedByStaffId], references: [id])
  uploadedByStaffId String?

  uploadedAt    DateTime   @default(now())
  deleted       Boolean    @default(false)
}

model Event {
  id           String      @id @default(uuid())
  department   Department  @relation(fields: [departmentId], references: [id])
  departmentId String
  title        String
  description  String?
  eventDate    DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  deleted      Boolean     @default(false)

  images       EventImage[]
  createdBy    Staff?      @relation(fields: [createdByStaffId], references: [id])
  createdByStaffId String?
}

model EventImage {
  id        String   @id @default(uuid())
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
  imageUrl  String
  caption   String?
  uploadedAt DateTime @default(now())
}
