generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
}

enum ConflictSeverity {
  LOW
  MEDIUM
  HIGH
}


enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskOrigin {
  USER
  AGENT
}

enum DocumentStatus {
  PENDING
  PROCESSED
  FAILED
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  email        String    @unique
  passwordHash String
  name         String?

  projects     Project[]

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Project {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      ProjectStatus @default(ACTIVE)
  progress    Float         @default(0)

  userId      String        @db.ObjectId
  user        User          @relation(fields: [userId], references: [id])

  documents   Document[]
  tasks       Task[]
  chunks      Chunk[]

  functionalRequirements     FunctionalRequirement[]
  nonFunctionalRequirements  NonFunctionalRequirement[]
  techStacks                 TechStack[]
  conflicts                  Conflict[]
  missingInformation          MissingInformation[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}


model FunctionalRequirement {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  code        String   // e.g. FR-1
  description String

  projectId   String   @db.ObjectId
  project     Project  @relation(fields: [projectId], references: [id])

  createdAt   DateTime @default(now())
}

model NonFunctionalRequirement {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  code        String   // e.g. NFR-2
  description String
  projectId   String   @db.ObjectId
  project     Project  @relation(fields: [projectId], references: [id])

  createdAt   DateTime @default(now())
}

model TechStack {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  category  String   // e.g. "backend", "frontend", "database"
  stack     String[] // e.g. ["Node.js", "Express", "Prisma"]


  projectId String   @db.ObjectId
  project   Project  @relation(fields: [projectId], references: [id])

  createdAt DateTime @default(now())
}

model Conflict {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  severity    ConflictSeverity

  resolved    Boolean  @default(false)
  resolution  String?

  projectId   String   @db.ObjectId
  project     Project  @relation(fields: [projectId], references: [id])

  createdAt   DateTime @default(now())
}

model MissingInformation {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String

  addressed   Boolean  @default(false)
  note        String?

  projectId   String   @db.ObjectId
  project     Project  @relation(fields: [projectId], references: [id])

  createdAt   DateTime @default(now())
}



model Document {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  fileName    String
  fileType    String
  status      DocumentStatus @default(PENDING)

  projectId   String         @db.ObjectId
  project     Project        @relation(fields: [projectId], references: [id])

  chunks      Chunk[]

  createdAt   DateTime       @default(now())
}

model Chunk {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  content     String
  vector      Float[] // MongoDB Atlas Vector Search compatible
  source      String?

  projectId   String   @db.ObjectId
  project     Project  @relation(fields: [projectId], references: [id])

  documentId  String   @db.ObjectId
  document    Document @relation(fields: [documentId], references: [id])

  createdAt   DateTime @default(now())
}

model Task {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      TaskStatus @default(TODO)
  origin      TaskOrigin @default(USER)
  weight      Int        @default(1)

  projectId   String     @db.ObjectId
  project     Project    @relation(fields: [projectId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
